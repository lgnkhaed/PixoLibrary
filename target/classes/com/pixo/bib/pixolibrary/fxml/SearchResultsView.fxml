<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pixo.bib.pixolibrary.Controllers.SearchResultsController">

    <center>
        <StackPane>
            <ImageView fx:id="currentImageView" fitHeight="400" fitWidth="400" preserveRatio="true"/>
        </StackPane>
    </center>

    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <HBox alignment="CENTER" spacing="20">
                <Button text="◀ Previous" onAction="#previousPage"/>
                <Label fx:id="pageLabel" text="Page 1/1"/>
                <Button text="Next ▶" onAction="#nextPage"/>
            </HBox>
            <Label fx:id="imageInfoLabel"/>
            <VBox fx:id="metadataContainer" spacing="5"/>
        </VBox>
    </bottom>
</BorderPane>