<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="mainPane" prefHeight="568.0" prefWidth="902.0" stylesheets="@../CSS/RegisterView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pixo.bib.pixolibrary.Controllers.RegisterController">
    <children>
        <TextField fx:id="email" layoutX="258.0" layoutY="214.0" prefHeight="38.0" prefWidth="386.0" promptText="exemple : toto@gmail.com" />
        <Button fx:id="registerButton" layoutX="397.0" layoutY="353.0" onAction="#register" prefHeight="26.0" prefWidth="109.0" text="Register" />
        <Button fx:id="loginButton" layoutX="405.0" layoutY="435.0" mnemonicParsing="false" onAction="#goLogin" prefHeight="32.0" prefWidth="101.0" text="LoginButton" />
        <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="244.0" layoutY="404.0" prefHeight="19.0" prefWidth="414.0" text="You already have an account !!" textAlignment="CENTER" textFill="#f5f3f3" textOverrun="CLIP">
            <font>
                <Font name="Bookman Old Style" size="16.0" />
            </font>
        </Label>
      <TextField fx:id="name" layoutX="258.0" layoutY="124.0" prefHeight="38.0" prefWidth="386.0" promptText="Lastname" />
      <TextField fx:id="firstname" layoutX="258.0" layoutY="168.0" prefHeight="38.0" prefWidth="386.0" promptText="Firstname" />
      <PasswordField fx:id="password" layoutX="258.0" layoutY="259.0" prefHeight="38.0" prefWidth="386.0" promptText="password" />
      <PasswordField fx:id="confirmPassword" layoutX="258.0" layoutY="304.0" prefHeight="38.0" prefWidth="386.0" promptText="Confirm password" />
    </children>
</Pane>
