<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../CSS/mainStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pixo.bib.pixolibrary.Controllers.MainController">
    <children>
        <ImageView fx:id="myImageView" fitHeight="488.0" fitWidth="800.0" layoutX="150.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Boutons existants -->
        <Button fx:id="changeImageButton" layoutX="552.0" layoutY="567.0" onAction="#handleNextImage" prefHeight="35.0" prefWidth="120.0" text="Other Image" />
        <Button fx:id="myUploadButton" layoutX="787.0" layoutY="571.0" onAction="#uploadPicture" prefHeight="35.0" prefWidth="120.0" text="Click To Upload" />
        <Button fx:id="myTransformButton" layoutX="249.0" layoutY="561.0" onAction="#openTransformationPanel" prefHeight="35.0" prefWidth="120.0" text="Transform" />

        <!-- Recherche par tags -->
        <TextField fx:id="searchTagField" layoutX="384.0" layoutY="19.0" prefHeight="38.0" prefWidth="419.0" promptText="Rechercher par tag ou filtre (ex: Nature, Sepia)..." />
        <Button layoutX="879.0" layoutY="16.0" onAction="#handleSearchByTag" prefHeight="38.0" prefWidth="120.0" text="Rechercher" />

        <!-- Tags management -->
        <TextField fx:id="tagInput" layoutX="1034.0" layoutY="344.0" prefHeight="35.0" prefWidth="200.0" promptText="Enter tag..." />
        <Button layoutX="1029.0" layoutY="402.0" onAction="#handleAddTag" prefHeight="35.0" prefWidth="200.0" text="Add" />
        <Button layoutX="1031.0" layoutY="455.0" onAction="#handleRemoveTag" prefHeight="35.0" prefWidth="200.0" text="Remove" />
        <ListView fx:id="tagsListView" layoutX="1034.0" layoutY="155.0" prefHeight="150.0" prefWidth="200.0" />
      <Button fx:id="loginButton" layoutX="1010.0" layoutY="640.0" mnemonicParsing="false" onAction="#login" prefHeight="50.0" prefWidth="120.0" text="LoginButton" />
      <Text fx:id="messageDisplay" fill="WHITE" layoutX="480.0" layoutY="661.0" strokeMiterLimit="20.0" strokeType="OUTSIDE" strokeWidth="20.0" text="Welcome To Pixo!!!  Log in and start the visual exprience" textAlignment="CENTER" wrappingWidth="343.71759033203125">
         <font>
            <Font name="Bookman Old Style Bold" size="24.0" />
         </font></Text>
    </children>
</Pane>
