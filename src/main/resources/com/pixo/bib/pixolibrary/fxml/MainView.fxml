<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="mainPane" prefHeight="500.0" prefWidth="800.0" stylesheets="@../CSS/mainStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pixo.bib.pixolibrary.Controllers.MainController">
    <children>
        <ImageView fx:id="myImageView" fitHeight="450.0" fitWidth="373.0" layoutX="22.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Boutons existants -->
        <Button fx:id="changeImageButton" layoutX="604.0" layoutY="389.0" onAction="#handleNextImage" text="Other Image" />
        <Button fx:id="myUploadButton" layoutX="604.0" layoutY="422.0" onAction="#uploadPicture" text="Click To Upload" />
        <Button fx:id="myTransformButton" layoutX="603.0" layoutY="356.0" onAction="#openTransformationPanel" text="Transform" />

        <!-- Recherche par tags -->
        <TextField fx:id="searchTagField" layoutX="553.0" layoutY="56.0" promptText="Rechercher par tag..." />
        <Button layoutX="720.0" layoutY="59.0" onAction="#handleSearchByTag" text="Rechercher" />

        <!-- Tags management -->
        <TextField fx:id="tagInput" layoutX="560.0" layoutY="217.0" promptText="Enter tag..." />
        <Button layoutX="756.0" layoutY="217.0" onAction="#handleAddTag" text="Add" />
        <Button layoutX="625.0" layoutY="254.0" onAction="#handleRemoveTag" text="Remove" />
        <ListView fx:id="tagsListView" layoutX="560.0" layoutY="99.0" prefHeight="100.0" prefWidth="176.0" />
    </children>
</Pane>
