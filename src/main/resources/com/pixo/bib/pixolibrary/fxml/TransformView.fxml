      <Button fx:id="rotateLeftButton" layoutX="31.0" layoutY="250.0" mnemonicParsing="false" onAction="#rotateLeft" prefHeight="25.0" prefWidth="176.0" text="Rotate Left" />
    </children>
</Pane>
