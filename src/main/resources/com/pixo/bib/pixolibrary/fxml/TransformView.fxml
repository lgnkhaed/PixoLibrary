        <ImageView fx:id="myImageView" fitHeight="425.0" fitWidth="373.0" layoutX="258.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="mySepiaButton" layoutX="31.0" layoutY="383.0" mnemonicParsing="false" onAction="#onSepiaClicked" prefHeight="25.0" prefWidth="176.0" text="Sepia" />
        <Button fx:id="myBlackWhiteButton" layoutX="31.0" layoutY="316.0" mnemonicParsing="false" onAction="#onGrayscaleClicked" prefHeight="25.0" prefWidth="176.0" text="Black and White" />
        <Button fx:id="mySymmetryButton" layoutX="31.0" layoutY="283.0" mnemonicParsing="false" onAction="#onMirrorClicked" prefHeight="25.0" prefWidth="176.0" text="Symmetry" />
        <Button fx:id="myRGBSwapButton" layoutX="31.0" layoutY="350.0" mnemonicParsing="false" onAction="#onRGBSwapClicked" prefHeight="25.0" prefWidth="176.0" text="RGB Swap" />
