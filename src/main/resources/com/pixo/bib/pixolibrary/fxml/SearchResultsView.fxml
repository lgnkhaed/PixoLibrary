<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pixo.bib.pixolibrary.Controllers.SearchResultsController">

    <center>
        <StackPane>
            <ImageView fx:id="currentImageView" fitHeight="500.0" fitWidth="602.0" preserveRatio="true" />
        </StackPane>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="20">
            <Button fx:id="returnButton" mnemonicParsing="false" onAction="#goBackToMain" text="return" />
                <Button onAction="#previousPage" text="◀ Previous" />
                <Label fx:id="pageLabel" text="Page 1/1" />
                <Button onAction="#nextPage" text="Next ▶" />
            </HBox>
            <Label fx:id="imageInfoLabel" />
            <VBox fx:id="metadataContainer" spacing="5" />
        </VBox>
    </bottom>
</BorderPane>
